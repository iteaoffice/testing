{
  "name": "iteaoffice/testing",
  "type": "library",
  "license": "MIT",
  "description": "General code for testing",
  "keywords": [
    "test"
  ],
  "homepage": "https://itea4.org",
  "support": {
    "email": "ticket@itea4.org"
  },
  "authors": [
    {
      "name": "Johan van der Heide",
      "email": "johan.van.der.heide@itea4.org"
    }
  ],
  "require": {
    "php": "^8.0 || ^8.1",
    "laminas/laminas-test": "^4.0",
    "pdepend/pdepend": "^2.10",
    "friendsofphp/php-cs-fixer": "^3.8",
    "squizlabs/php_codesniffer": "^3.7",
    "phploc/phploc": "^7.0",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "php-parallel-lint/php-console-highlighter": "^v1.0.0",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9",
    "vimeo/psalm": "^4.23 || ^5.0",
    "jetbrains/phpstorm-attributes": "^1.0",
    "laminas/laminas-coding-standard": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Testing\\": "src/"
    }
  },
  "replace": {
    "laminas/laminas-cache-storage-adapter-apc": "*",
    "laminas/laminas-cache-storage-adapter-apcu": "*",
    "laminas/laminas-cache-storage-adapter-blackhole": "*",
    "laminas/laminas-cache-storage-adapter-dba": "*",
    "laminas/laminas-cache-storage-adapter-ext-mongodb": "*",
    "laminas/laminas-cache-storage-adapter-filesystem": "*",
    "laminas/laminas-cache-storage-adapter-memory": "*",
    "laminas/laminas-cache-storage-adapter-memcache": "*",
    "laminas/laminas-cache-storage-adapter-memcached": "*",
    "laminas/laminas-cache-storage-adapter-mongodb": "*",
    "laminas/laminas-cache-storage-adapter-session": "*",
    "laminas/laminas-cache-storage-adapter-wincache": "*",
    "laminas/laminas-cache-storage-adapter-xcache": "*",
    "laminas/laminas-cache-storage-adapter-zend-server": "*"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.0-dev",
      "dev-develop": "3.1-dev"
    }
  },
  "scripts": {
    "check": [
      "@php-lint",
      "@cs"
    ],
    "fix": [
      "@cbf",
      "@cs-fix"
    ],
    "php-lint": "./vendor/bin/parallel-lint src",
    "cs": "./vendor/bin/phpcs",
    "cbf": "./vendor/bin/phpcbf",
    "cs-fix": "./vendor/bin/php-cs-fixer fix -v src"
  }
}
