{
  "name": "iteaoffice/testing",
  "type": "library",
  "license": "MIT",
  "description": "General code for testing",
  "keywords": [
    "test"
  ],
  "homepage": "https://itea4.org",
  "support": {
    "email": "ticket@itea4.org"
  },
  "authors": [
    {
      "name": "Johan van der Heide",
      "email": "johan.van.der.heide@itea4.org"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "~8.0.0 || ~8.1.0 || ~8.2.0",
    "laminas/laminas-test": "^4.9",
    "doctrine/orm": "^2.14 || ^3.0",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "php-parallel-lint/php-console-highlighter": "^1.0",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^10",
    "vimeo/psalm": "^5.9",
    "jetbrains/phpstorm-attributes": "^1.0",
    "laminas/laminas-coding-standard": "^2.5"
  },
  "config": {
    "vendor-dir": "vendor",
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Testing\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "4.0-dev",
      "dev-develop": "4.1-dev"
    }
  },
  "scripts": {
    "check": [
      "@php-lint",
      "@cs"
    ],
    "fix": [
      "@cbf",
      "@cs-fix"
    ],
    "php-lint": "./vendor/bin/parallel-lint src",
    "cs": "./vendor/bin/phpcs",
    "cbf": "./vendor/bin/phpcbf",
    "cs-fix": "./vendor/bin/php-cs-fixer fix -v src"
  }
}
