{
  "name": "iteaoffice/testing",
  "type": "library",
  "license": "MIT",
  "description": "General code for testing",
  "keywords": [
    "test"
  ],
  "homepage": "https://itea4.org",
  "support": {
    "email": "ticket@itea4.org"
  },
  "authors": [
    {
      "name": "Johan van der Heide",
      "email": "johan.van.der.heide@itea4.org"
    }
  ],
  "require": {
    "php": "~8.2.0 || ~8.3.0 || ~8.4.0",
    "laminas/laminas-test": "^4.1",
    "symfony/finder": "^6.4",
    "doctrine/orm": "^2.14 || ^3.3",
    "dg/bypass-finals": "^1.8",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "php-parallel-lint/php-console-highlighter": "^1.0",
    "phpstan/phpstan-doctrine": "^2.0.0",
    "vimeo/psalm": "^5.26",
    "jetbrains/phpstorm-attributes": "^1.2",
    "rector/rector": "^1"
  },
  "config": {
    "vendor-dir": "vendor",
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Testing\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "5.0-dev",
      "dev-develop": "5.1-dev"
    }
  },
  "scripts": {
    "check": [
      "@php-lint",
      "@cs"
    ],
    "fix": [
      "@cbf",
      "@cs-fix"
    ],
    "php-lint": "./vendor/bin/parallel-lint src",
    "phpstan": "./vendor/bin/phpstan analyse src --memory-limit=2G",
    "cs": "./vendor/bin/phpcs",
    "cbf": "./vendor/bin/phpcbf",
    "cs-fix": "./vendor/bin/php-cs-fixer fix -v src",
    "rector": "./vendor/bin/rector"
  }
}
