{
  "name": "iteaoffice/testing",
  "type": "library",
  "license": "MIT",
  "description": "General code for testing",
  "keywords": [
    "test"
  ],
  "homepage": "https://itea4.org",
  "support": {
    "email": "ticket@itea4.org"
  },
  "authors": [
    {
      "name": "Johan van der Heide",
      "email": "johan.van.der.heide@itea4.org"
    }
  ],
  "require": {
    "php": "~8.0.0 || ~8.1.0 || ~8.2.0",
    "laminas/laminas-test": "^4.0",
    "doctrine/orm": "^2.13 || ^3.0",
    "pdepend/pdepend": "^2.10",
    "friendsofphp/php-cs-fixer": "^3.8",
    "squizlabs/php_codesniffer": "^3.7",
    "phploc/phploc": "^7.0",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "php-parallel-lint/php-console-highlighter": "^v1.0.0",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9",
    "vimeo/psalm": "^4.23 || ^5.0",
    "jetbrains/phpstorm-attributes": "^1.0",
    "laminas/laminas-coding-standard": "^2.3"
  },
  "config": {
    "vendor-dir": "vendor",
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Testing\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.5-dev",
      "dev-develop": "3.6-dev"
    }
  },
  "scripts": {
    "check": [
      "@php-lint",
      "@cs"
    ],
    "fix": [
      "@cbf",
      "@cs-fix"
    ],
    "php-lint": "./vendor/bin/parallel-lint src",
    "cs": "./vendor/bin/phpcs",
    "cbf": "./vendor/bin/phpcbf",
    "cs-fix": "./vendor/bin/php-cs-fixer fix -v src"
  }
}
